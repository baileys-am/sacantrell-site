<!DOCTYPE html>
<html class="layout-html">
<head>
    <style>
        .layout-html {
            width: 100%;
            height: 100%;
        }

        .layout-body {
            height: 100%;
            background-color: rgba(148, 153, 152, 0.582);
        }

        .layout-page {
            margin-top: 50px;
            margin-bottom: 50px;
            margin-left: 220px;
            margin-right: 220px;
            padding: 18px;
            height: 100%;
            color: black;
            background-color: rgb(226, 245, 244);
            -webkit-box-shadow: 0 0 4px 1px rgb(39, 37, 37);
            -moz-box-shadow: 0 0 4px 1px rgb(39, 37, 37);
            box-shadow: 0 0 4px 1px rgb(39, 37, 37);
        }

        .layout-nav {
            text-align: center;
        }

        .layout-nav-links {
            margin: auto;
            padding: 0;
            width: 60%;
            overflow: hidden;
            list-style-type: none;
        }

        .layout-nav-link {
            margin: auto;
            width: 100px;
            display: inline-block;
        }

        .layout-nav-link a {
            display: block;
            text-align: center;
            padding: 16px;
            text-decoration: none;
            color: black;
        }

        .layout-nav-link a:hover {
            color: grey;
        }

        .layout-hr {
            border-top: 1px solid black;
            margin-left: 10%;
            margin-right: 10%;
        }
    </style>

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/vender.min.css" asp-append-version="true" />
    </environment>
</head>

<body class="layout-body">
    <div class="layout-page">
        <div class="layout-nav">
            <ul class="layout-nav-links">
                <li class="layout-nav-link"><a href="Home">Home</a></li>
                <li class="layout-nav-link"><a href="Games">Games</a></li>
                <li class="layout-nav-link"><a href="About">About</a></li>
            </ul>
        </div>

        <hr class="layout-hr" />

        <div>
            @RenderBody()
        </div>
    </div>

    <environment include="Development">
        <script src="~/dist/vendor.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/vendor.min.js" asp-append-version="true"></script>
    </environment>
</body>
</html>

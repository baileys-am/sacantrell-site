<!DOCTYPE html>
<html>
<head>
    <style>
        html {
            width: 100%;
            height: 100%;
        }

        body {
            height: 100%;
            background-color: rgba(148, 153, 152, 0.582);
        }

        .layout-page {
            margin-top: 50px;
            margin-bottom: 50px;
            margin-left: 220px;
            margin-right: 220px;
            padding: 18px;
            height: 100%;
            color: black;
            background-color: rgb(226, 245, 244);
            -webkit-box-shadow: 0 0 4px 1px rgb(39, 37, 37);
            -moz-box-shadow: 0 0 4px 1px rgb(39, 37, 37);
            box-shadow: 0 0 4px 1px rgb(39, 37, 37);
        }

        .layout-link-banner {
            text-align: center;
        }

        .layout-link-list {
            margin: auto;
            padding: 0;
            width: 60%;
            overflow: hidden;
            list-style-type: none;
        }

        .layout-link {
            margin: auto;
            width: 100px;
            display: inline-block;
        }

        .layout-link a {
            display: block;
            text-align: center;
            padding: 16px;
            text-decoration: none;
            color: black;
        }

        .layout-link a:hover {
            color: grey;
        }

        .layout-hr {
            border-top: 1px solid black;
            margin-left: 10%;
            margin-right: 10%;
        }
    </style>
</head>

<body>
    <div class="layout-page">
        <div class="layout-link-banner">
            <ul class="layout-link-list">
                <li class="layout-link"><a href="Home">Home</a></li>
                <li class="layout-link"><a href="Games">Games</a></li>
                <li class="layout-link"><a href="About">About</a></li>
            </ul>
        </div>

        <hr class="layout-hr" />

        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>

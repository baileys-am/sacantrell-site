<!DOCTYPE html>
<html>
<head>
    <style>
#header, #footer { overflow: hidden; background: #444; height: 100px; }
#header { top: 0; }
#content { top: 100px; bottom: 100px; overflow: auto; background: #CCC; }
#footer { bottom: 0; }​

        .game-layout {
            width: 100%;
            height: 100%;
        }

        .game-layout > header {
            width: 100%;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            padding: 4px;
            background-color: rgb(54, 54, 54);
        }

        .game-layout > header a {
            color: whitesmoke;
        }

        .game-layout > header a:hover {
            color: grey;
            text-decoration: none;
        }

        .game-layout > header a span {
            margin-left: 6px;
            font-size: 20px;
        }

        .game-layout > header a span:hover {
            color: inherit;
            text-decoration: inherit;
        }

        .game-content {
            width: 100%;
            top: 35px;
            bottom: 25px;
            left: 0;
            position: absolute;
            overflow: auto;
            border-top: 1px solid black;
            border-bottom: 1px solid black;
            background-color: rgb(54, 54, 54);
        }

        .game-layout > footer {
            width: 100%;
            height: 25px;
            overflow: hidden;
            left: 0;
            bottom: 0;
            position: absolute;
            text-align: center;
            background-color: rgb(54, 54, 54);
        }

        .game-layout > footer span {
            margin: 5px;
            font-size: 12px;
            color: whitesmoke;
        }
    </style>

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/vendor.min.css" asp-append-version="true" />
    </environment>

    <link rel="icon" type="image/png" href="~/favicon.ico" />
</head>
<body>
    <environment include="Development">
        <script src="~/dist/vendor.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/vendor.min.js",asp-append-version="true"></script>
    </environment>

    <div class="game-layout">
        <header>
            <a href="http://www.sacantrell.net">
                <span class="fa fa-arrow-left"></span>
                <span>sacantrell.net</span>
            </a>
        </header>

        <div class="game-content">
            @RenderBody()
        </div>

        <footer>
            <span>© Steven Cantrell</span>
        </footer>
    </div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <style>
        .game-layout {
        }

        .game-layout header {
            padding: 8px;
            background-color: rgb(54, 54, 54);
        }

        .game-layout header a {
            color: whitesmoke;
        }

        .game-layout header a:hover {
            color: grey;
            text-decoration: none;
        }

        .game-layout header a span {
            margin-left: 6px;
            font-size: 20px;
        }

        .game-layout header a span:hover {
            color: inherit;
            text-decoration: inherit;
        }

        .game-layout footer {
            width: 100%;
            height: 25px;
            position: fixed;
            bottom: 0;
            text-align: center;
            background-color: rgb(54, 54, 54);
        }

        .game-layout footer span {
            margin: 5px;
            font-size: 12px;
            color: whitesmoke;
        }

        .game-content {
        }
    </style>

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/vender.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <environment include="Development">
        <script src="~/dist/vendor.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/vendor.min.js",asp-append-version="true"></script>
    </environment>

    <div class="game-layout">
        <header>
            <a href="http://www.sacantrell.net">
                <span class="fa fa-arrow-circle-left"></span>
                <span>sacantrell.net</span>
            </a>
        </header>

        <div class="game-content">
            @RenderBody()
        </div>

        <footer>
            <span>Â© Steven Cantrell</span>
        </footer>
    </div>
</body>
</html>
